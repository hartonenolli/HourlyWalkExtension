{
    "manifest_version": 3,
    "name": "Hourly Walk Extension",
    "version": "1.0",
    "description": "An extension that reminds you to take a walk every hour.",
    "permissions": [
        "notifications",
        "storage",
        "alarms"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "icon.png"
    },
    "action": {
        "default_icon": "icon.png",
        "default_popup": "setup.html"
    }
}
